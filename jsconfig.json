{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"noEmit": true,
		"baseUrl": ".",
		"jsx": "react",
		//"checkJs": true,
		"paths": {
			"@/styles/*": ["styles/*"],
			"@/utils/*": ["utils/*"],
			"@/func/*": ["utils/functions/*"],

			"@/pages/*": ["pages/*"],
			"@/components/*": ["components/*"],
			"@/inputs/*": ["components/Page/Inputs/*"],
			"@/Layout/*": ["components/Layout/*"],
			"@/UI/*": ["components/UI/*"],
			"@/Next/*": ["components/NextUI/*"],
			"@/data/*": ["utils/data/*"],
			"@/lib/*": ["utils/lib/*"],
			"@/models/*": ["utils/models/*"],
			"@/public/*": ["public/*"],
			"@/slices/*": ["utils/slices/*"]
		}
	},
	"exclude": ["node_modules"]
}
